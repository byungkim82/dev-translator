{
  "name": "dev-translator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:wrangler": "wrangler dev",
    "build": "next build && opennextjs-cloudflare build --skipNextBuild",
    "start": "next start",
    "lint": "next lint",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create dev-translator-db",
    "db:migrate:local": "wrangler d1 migrations apply dev-translator-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply dev-translator-db --remote"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.80.6",
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "@opennextjs/cloudflare": "^1.2.1",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.3",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "wrangler": "^4.20.1"
  }
}
